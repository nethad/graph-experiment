%h1
  Awesome graph

.graph

%script{src: "https://d3js.org/d3.v4.js"}

:javascript
  var options = {
    minCollision: 60,
    neo4jDataUrl: 'api/data.json',
    nodeRadius: 35,
    onNodeDoubleClick: function(node) {
      var maxNodes = 5,
      data = neo4jd3.randomD3Data(node, maxNodes);
      neo4jd3.updateWithD3Data(data);
    },
    icons: {},
    zoomFit: false,
    minCollision: 3*35
  }
  var neo4jd3 = new Neo4jd3('.graph', options);
